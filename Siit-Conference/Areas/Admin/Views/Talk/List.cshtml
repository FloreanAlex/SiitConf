@model IEnumerable<Siit_Conference.Models.TalkDto>

@{
    ViewData["Title"] = "List";
}

<h1>List</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table" id="talksTable">
    <thead>
        <tr>
           
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Level)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Active)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FeedbackEnabled)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SpeakerId)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                @*<td>
                        @Html.DisplayFor(modelItem => item.Id)
                    </td>*@
                <td>
                    @Html.DisplayFor(modelItem => item.Title)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Level)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Active)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FeedbackEnabled)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SpeakerId)
                </td>

                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |            |
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id })


                </td>
            </tr>
        }
    </tbody>
</table>
@section Scripts{

    <script>

    $(document).on("click", "#delete-item", function (event) {
        event.preventDefault();
        var url = $(this).attr('href');

        $.ajax({
            type: "DELETE",
            url: url,
            success: function (data) {
                $("#talksTable").load(location.href + " #talksTable");
            },
            error: function (jqXHR, textStatus) {
                console.log(textStatus);
            }
        });
    });
    </script>
}
